@{
    ViewData["Title"] = "Home Page";
}
@using Final.Models
@*you are brining in indivisual recipes not all of them*@
@model List<Movie>
<h1>Movies</h1>
<a href="@Url.Action("Form", "Home")">Fill out Form</a>
@*Create a table to display*@
<table class="table table-bordered table-striped">
    <thread class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>LentTo</td>
            <td>Notes</td>
        </tr>
    </thread>

    @*load the data loop through and bring out results.*@
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Category</td>
                <td>@m.Title</td>
                <td>@m.Year</td>
                <td>@m.Director</td>
                <td>@m.Rating</td>
                <td>@m.Edited</td>
                <td>@m.LentTo</td>
                <td>@m.Notes</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@m.MovieId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@m.MovieId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

